<!--index.wxml-->
<view class="container">
	<view class="page-body">

		<view class="page-section page-section-spacing swiper">
			<swiper indicator-dots="{{indicatorDots}}" circular="{{circular}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
				<block wx:for="{{background}}" wx:key="*this">
					<swiper-item>
						<view class="swiper-item {{item}}"></view>
					</swiper-item>
				</block>
			</swiper>
		</view>

		<view class="section">
			<view class="flex-wrp" style="flex-direction:row;">
				<view class="flex-item  card" bindtap="goTk" id='real'> <label>立即下单 <text>\n 1小时取件</text> </label> </view>
			</view>
		</view>
		<view class="section">
			<view class="flex-wrp" style="flex-direction:row;">
				<view class="flex-item  card" id='real'><button open-type='share'> <label>邀请好友 <text>\n 立即邀请</text> </label> </button></view>
			</view>
		</view>


	</view>

	<view class="personal" bindtap="goPersonal">
		<view>用户</view>
	</view>

</view>