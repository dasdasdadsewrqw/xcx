.swiper-item,swiper{
  display: block;
  height: 400rpx;
}
.card{
  border: 1rpx solid #d7d7d7;
  border-radius: 10rpx;
  box-shadow: 0rpx 10rpx 10rpx #d7d7d7;
  overflow: hidden
}
.card .section__title{
  padding:5rpx 10rpx;
  margin-bottom: 18rpx;
  border-bottom: 1rpx solid #d7d7d7;
}
.flex-label{
  margin-right: 10rpx;
}
.dt-list{
  padding:5rpx 10rpx;
  margin-bottom: 18rpx;
}
.check-answer{
  display: inline-block;
  float: right;
  width: auto;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  padding: 5rpx 20rpx;
  font-size: 30rpx;
  font-weight: normal;
  border-radius: 11111rpx;
  border:1rpx solid #000;
}
.page-body>.section__title{
  font-size: 40rpx;
  padding: 20rpx;
}
.personal{
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  z-index: 9;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  border: 1rpx solid #d7d7d7;
  background: #fff;
  border-radius: 200rpx;
}
.section .card{
  margin-bottom: 20rpx;
}
.service{
display: inline;
width: auto;
margin: 0;
padding: 0;
font-size: 30rpx;
text-align: center;
font-weight: normal;
line-height: 120rpx;
}