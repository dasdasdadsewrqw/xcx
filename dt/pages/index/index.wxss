.swiper-item,swiper{
  display: block;
  height: 400rpx;
}
.card{
  border: 1rpx solid #d7d7d7;
  border-radius: 10rpx;
  box-shadow: 0rpx 10rpx 10rpx #d7d7d7;
  overflow: hidden
}
.card .section__title{
  padding:5rpx 10rpx;
  border-bottom: 1rpx solid #d7d7d7;
  margin-bottom: 18rpx;
}
.flex-label{
  margin-right: 10rpx;
}
.dt-list{
  padding:5rpx 10rpx;
  margin-bottom: 18rpx;
}
.check-answer{
  display: inline-block;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: normal;
  float: right;
  margin-right: 30rpx;
  width: auto;
  padding: 5rpx 20rpx;
  border-radius: 11111rpx;
  border:1rpx solid #000;
}
.page-body>.section__title{
  font-size: 40rpx;
  padding: 20rpx;
}
.personal{
  width: 160rpx;
  height: 160rpx;
  background: #1AAD19;
  border-radius: 200rpx;
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  z-index: 9;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}
.section .card{
  margin-bottom: 20rpx;
}