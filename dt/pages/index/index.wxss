/**index.wxss**/
@import "../../lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}
.flex-wrp {
  display: flex;
}
.flex-wrp>.flex-item{
position: relative;
flex:1; 
height: 100px;
margin:0 5rpx;
padding-top: 10px;
text-align: center;
line-height: 40px;
}
.flex-item text{
  font-size: 50rpx;
  font-weight: bold;
}
.section{
  padding:0 10rpx
}
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #F8F8F8;
}
.page-body{
  padding-top: 60rpx;
}
.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}
.page-section-spacing{
  box-sizing: border-box;
}
.demo-text-1{
  position: relative;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background-color: #1AAD19;
  color: #FFFFFF;
}
.demo-text-1:before{
  position: absolute;
  top: 50%;
  left: 50%;
  content: 'A';
  transform: translate(-50%, -50%);
}
