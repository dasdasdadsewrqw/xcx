/* pages/personal/personal.wxss */
.wx-flex {
  display: flex;
  flex-direction: row;
}
.flex-one{
  -webkit-flex: 1;
  -webkit-box-flex: 1;
  flex: 1;
}
.flex-two{
  -webkit-flex: 2;
  -webkit-box-flex: 2;
  flex: 2;
}
.flex-three{
  -webkit-flex: 3;
  -webkit-box-flex: 3;
  flex: 3;
}
.flex-four{
  -webkit-flex: 4;
  -webkit-box-flex: 4;
  flex: 4;
}
.flex-five{
  -webkit-flex: 5;
  -webkit-box-flex: 5;
  flex: 5;
}
.portrait-box{
  padding: 10px;
}
.portrait-img image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}
.portrait-right{
  padding-left: 10px;
}
.portrait-name{
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 50rpx;
}
.personal-rtvp{
  margin-top: 30rpx;
  font-size: 25rpx;
  line-height: 50rpx;
}
.personal-vip{
  margin-right: 20px;
}
.personal-moneybox{
  text-align: center;
  margin: 20rpx 0;
}
.personal-moneybox text{
  display: block;
  line-height: 40rpx;
  font-size: 25rpx;
}
.personal-order{
  border-right: 1px solid #000;
}
.personal-moneybox .personal-onumber{
  font-size: 32rpx;
  font-weight: bold;
}
.personal-emptycolr{
  height: 20rpx;
  background-color: rgb(226, 226, 226);
}